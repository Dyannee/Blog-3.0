<div class="blog-header">
  <h1 class="blog-title text-center">All albums</h1>
</div>
<div class="blog-main">
  <% @albums.each do |f| %>
    <div class="blog-post">

      <h2 class="blog-post-title"><%= f.title %></h2>

      <h6 class="blog-post-meta text-muted">Made by <%= link_to f.user.first_name, user_albums_path(f.user_id) %></h6>

      <p><%= f.body %></p>
      <%= link_to 'Show', album_path(f), class: "btn btn-sm btn-default" %>
      <div class="btn btn-group btn-group-sm pull-right">
      <% if current_user.id == f.user_id %>
        <%= link_to 'Edit', edit_album_path(f), class: "btn btn-default" %>
        <%= link_to 'Delete', album_path(f), method: :delete,
                                                  data: { confirm: 'Sure?' }, class: "btn btn-default"%>
      <% end %>
      </div>
    </div>
  <% end %>
</div>
