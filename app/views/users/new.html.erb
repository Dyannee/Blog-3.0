<div class='col-md-8 col-md-offset-2'>
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <button type="button" class="btn btn-danger" data-toggle="collapse" data-target="#demo">Errors</button>
      <div id="demo" class="collapse alert alert-danger">
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <h4>Please introduce your first and last name</h4>
    <%= f.text_field :first_name, :placeholder => 'First name', class: 'form-control' %>
    <%= f.text_field :last_name, :placeholder => 'Last name', class: 'form-control' %>
    <h4>Your email</h4>
    <%= f.email_field :email, :placeholder => 'Email', class: 'form-control' %>
    <h4>Your password</h4>
    <%= f.password_field :password, :placeholder => 'Password', class: 'form-control' %>
    <%= f.submit 'Create User', class: 'btn btn-primary center-block btn-lg' %>
  <% end %>
</div>
